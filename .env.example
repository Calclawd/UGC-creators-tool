# X Outreach Agent - Environment Variables
# Copy to .env and fill in your values

# =============================================================================
# AgentMail
# =============================================================================
AGENTMAIL_API_KEY=am_live_...
AGENTMAIL_WEBHOOK_SECRET=whsec_...

# =============================================================================
# X (Twitter) API
# =============================================================================
# Bearer token for search (app-level)
X_BEARER_TOKEN=AAAAAAAAAAAAAAAAAAAAAx...

# User OAuth token for DMs (user-level)
X_USER_ACCESS_TOKEN=...

# =============================================================================
# OpenClaw
# =============================================================================
OPENCLAW_BASE_URL=https://your-vps:18789
OPENCLAW_HOOK_TOKEN=your-hook-token

# =============================================================================
# Redis (for webhook dedupe)
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# Webhook Adapter
# =============================================================================
PORT=3000
